<!-- search_by_sport.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search by Sport</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .search-bar {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        label {
            margin-right: 10px;
            font-size: 18px;
        }

        input {
            padding: 10px;
            font-size: 16px;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #4285f4;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        .buttons-bar {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

        .buttons-bar button {
            margin-right: 10px;
        }
    </style>
</head>

<body>
    <!-- Search bar -->
    <div class="search-bar">
        <label for="search">Search Sport:</label>
        <input type="text" id="search" placeholder="Enter sport name">
        <button onclick="searchSport()">Search</button>
    </div>

    <!-- Buttons -->
    <div class="buttons-bar">
        <button onclick="viewAll()">View All</button>
    </div>

    <script>
        function searchSport() {
            // Get the value from the search input
            const searchQuery = document.getElementById('search').value;

            // Redirect to the search results page with the search query
            window.location.href = '/search-results?query=' + encodeURIComponent(searchQuery);
        }

        function viewAll() {
            // Redirect to sport details page
            window.location.href = '/sport_details';
        }
    </script>
</body>

</html>