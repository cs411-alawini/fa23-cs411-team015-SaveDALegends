<!-- liked_country.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liked Countries</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        .header,
        .row {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            /* Allow items to wrap to the next line */
            width: 100%;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            padding: 10px;
        }

        .header {
            font-weight: bold;
            background-color: #f2f2f2;
        }

        h3,
        p {
            margin: 0;
        }

        .sport {
            flex: 2;
        }

        .actions {
            flex: 1;
            text-align: center;
        }

        .search-bar {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            align-items: center;
        }

        input[type="text"] {
            padding: 5px;
            margin-left: 5px;
        }

        .buttons-bar {
            display: flex;
            justify-content: flex-start;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .button,
        .go-back-button {
            margin-right: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 5px 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 12px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <!-- Go Back Button -->
    <div class="buttons-bar">
        <button class="go-back-button" onclick="goBack()">Go Back</button>
    </div>

    <!-- Add Sport Button -->
    <div class="buttons-bar">
        <button class="button" onclick="addSport()">Add Sport</button>
    </div>

    <h1>Liked Sports</h1>

    <!-- Header row -->
    <div class="header">
        <div class="sport">Sport</div>
        <div class="actions">Actions</div>
    </div>

    <!-- Updated Data rows section with Remove button -->
    <% for (let i=0; i < results.length; i++) { %>
        <div class="row">
            <div class="sport">
                <h3>
                    <a href='/search-results?query=<%= results[i].sportname %>'>
                        <%= results[i].sportname %>
                    </a>
                </h3>
            </div>
            <div class="actions">
                <!-- Remove button triggers the hidden form -->
                <form action="/remove_sport" method="post">
                    <input type="hidden" name="sportid" value="<%= results[i].sportid %>">
                    <button class="go-back-button" type="submit">Remove</button>
                </form>
            </div>
        </div>
        <% } %>

            <script>
                function addSport() {
                    // Redirect to the route that displays all sports
                    window.location.href = '/all_sports';
                }

                function goBack() {
                    // Redirect to the "medals" page
                    window.location.href = '/medals';
                }
            </script>
</body>

</html>