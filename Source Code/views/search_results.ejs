<!-- search_results.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sport Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        .header,
        .row {
            display: flex;
            align-items: center;
            width: 100%;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            padding: 10px;
        }

        .header {
            font-weight: bold;
            background-color: #f2f2f2;
        }

        h3,
        p {
            margin: 0;
        }

        .sport {
            flex: 2;
        }

        .countries,
        .gold,
        .silver,
        .bronze {
            flex: 1;
            text-align: center;
        }

        .search-bar {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            align-items: center;
        }

        input[type="text"] {
            padding: 5px;
            margin-left: 5px;
        }
    </style>
</head>

<body>
    <h1>Results</h1>

    <!-- Header row -->
    <div class="header">
        <div class="sport">Sport</div>
        <div class="countries">Countries Participated</div>
        <div class="gold">Gold Medal Winner</div>
        <div class="silver">Silver Medal Winner</div>
        <div class="bronze">Bronze Medal Winner</div>
    </div>

    <!-- Data rows section -->
    <% for (let i=0; i < results.length; i++) { %>
        <div class="row">
            <div class="sport">
                <h3>
                    <%= results[i].Sportname %>
                </h3>
            </div>
            <div class="countries">
                <p>
                    <a href="/participated_country?sportname=<%= results[i].Sportname %>">
                        <%= results[i].No_of_Countries_Participated %>
                    </a>
                </p>
            </div>
            <div class="gold">
                <p><a href="/country_sport/<%= results[i].Gold_Medal_Winner %>">
                        <%= results[i].Gold_Medal_Winner %>
                    </a></p>
            </div>
            <div class="silver">
                <p><a href="/country_sport/<%= results[i].Silver_Medal_Winner %>">
                        <%= results[i].Silver_Medal_Winner %>
                    </a></p>
            </div>
            <div class="bronze">
                <p><a href="/country_sport/<%= results[i].Bronze_Medal_Winner %>">
                        <%= results[i].Bronze_Medal_Winner %>
                    </a></p>
            </div>
        </div>
        <% } %>
</body>

</html>