<!-- participated_country.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Participated Country</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        .header,
        .row {
            display: flex;
            align-items: center;
            width: 100%;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            padding: 10px;
        }

        .header {
            font-weight: bold;
            background-color: #f2f2f2;
        }

        h3,
        p {
            margin: 0;
        }

        .country,
        .team,
        .position {
            flex: 1;
            text-align: center;
        }
    </style>
</head>

<body>
    <h1>Participated Countries</h1>

    <!-- Header row -->
    <div class="header">
        <div class="country">Country</div>
        <div class="team">Team</div>
        <div class="position">Position</div>
    </div>

    <!-- Data rows section -->
   
    <% for (let i=0; i < results.length; i++) { %>
        <div class="row">
            <div class="country">
                <p>
                    <a href="/country_sport/<%= results[i].countryname %>">
                        <%= results[i].countryname %>
                    </a>
                </p>
            </div>
            <div class="team">
                <p>
                    <a href="/team-details/<%= results[i].teamname %>">
                        <%= results[i].teamname %>
                    </a>
                </p>
            </div>
            <div class="position">
                <p>
                    <%= results[i].position %>
                </p>
            </div>
        </div>
        <% } %>
</body>

</html>